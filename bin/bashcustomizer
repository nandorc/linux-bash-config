#!/bin/bash

# Load dependencies
source ~/.basher/lib/messages.sh
source ~/.basher/lib/inihandler.sh

if [ "$1" == "help" ]; then
    if [ -z "$2" ]; then
        mdv ~/.basher/src/bashcustomizer/README.md
    else
        mdv ~/.basher/src/bashcustomizer/src/"$2"/README.md
    fi
elif [ "$1" == "list" ]; then
    getAllINIVars ~/.basher/src/bashcustomizer/etc/vars.ini
elif [ "$1" == "set" ]; then
    ~/.basher/src/bashcustomizer/cmd/manage.sh set "$2" "$3"
elif [ "$1" == "unset" ]; then
    ~/.basher/src/bashcustomizer/cmd/manage.sh unset "$2"
elif [ "$1" = "reset" ]; then
    ~/.basher/src/bashcustomizer/cmd/reset.sh
elif [ "$1" = "init" ]; then
    ~/.basher/src/bashcustomizer/cmd/reset.sh -q
else
    printErrorMessage "No valid option provided for bashcustomizer." before
    printWarningMessage "Try 'bashcustomizer help' to look for available commands." after
fi
