#!/bin/bash

# Dependencies
source ~/.basher/etc/colors.sh
source ~/.basher/lib/flagger.sh

commands_array=(${1//:/ })
[ -z "${commands_array[0]}" ] && echo -e "\n"$color_red"Execution Exception: "$color_none"No parameters received\nUse "$color_yellow"basher help"$color_none" to know how to use the tool\n" && exit 1
[ ! -f ~/.basher/src/"${commands_array[0]}"/main.sh ] && echo -e "\n"$color_red"Execution Exception: "$color_yellow"${commands_array[0]}"$color_none" is not a valid executable command\nUse "$color_yellow"basher help:list"$color_none" to get the list of commands\n" && exit 1
~/.basher/src/"${commands_array[0]}"/main.sh ${commands_array[1]} $(pruneFlag $1 $*)
