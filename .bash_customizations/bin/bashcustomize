#!/bin/bash

source ~/.bash_customizations/data/helper.sh
source ~/.bash_customizations/data/manager.sh

if [ -z $1 ]; then
  dispatchErrorMessage "No option provided"
elif [ "$1" == "help" ]; then # Show help
  printHelp
elif [ "$1" == "list" ]; then # List available variables
  listVariables
elif [ "$1" == "set" ]; then # Set a new variable or updated an existing one
  manageVariable set "$2" "$3"
elif [ "$1" == "unset" ]; then # Delete a variable
  manageVariable unset "$2"
elif [ "$1" = "reset" ]; then
  setDefaultValues
  dispatchResetNeedMessage "Variables were set to default values"
elif [ "$1" = "init" ]; then
  setDefaultValues
else
  dispatchErrorMessage "No valid option provided"
fi
